<h1>Perfil do <%= @user.email %></h1> 

<% if current_user.following?(@user) %>
    <%= link_to "Unfollow #{@user.email}", relationship_path(id:@user.id), method: "delete" %>
<% else %>
    <%= link_to "Follow #{@user.email}", relationships_path(id:@user.id), method: "post" %>
<% end %>


<h2>Tweets (<%= @user.tweets.count %>)</h2>

<%# current_user.active_relationships.find() %>

<% if @user.tweets.empty? %>
    <p>Usuário ainda não tem tweets.</p>
<% else %>
    <ul>
        <% @user.tweets.each do |tweet| %>
            <li><%= tweet.content %></li>
        <% end %>
    </ul>
<% end %>